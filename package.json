{
  "name": "rhemacares-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles.css -o ./assets/css/styles.css --minify",
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "a11y:axe": "node tools/axe-scan.js",
    "lint:html": "npx htmlhint './*.html'",
    "ci:local": "npm run build:css && npm run lint:html && npm run a11y:axe"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "nodemailer": "^6.9.4"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.8",
    "nodemon": "^2.0.22",
    "pa11y": "^6.0.0",
    "htmlhint": "^0.15.0",
    "puppeteer": "^21.4.0",
    "axe-core": "^4.9.3"
  }
}
